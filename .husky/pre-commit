#!/usr/bin/env sh

# =============================================================================
# Pre-Commit Hook - Ultra-Fast Safety Net
# =============================================================================
# Nur TypeCheck - schnell genug um nicht zu nerven
# =============================================================================

echo "⚡ Pre-commit: TypeScript Check..."
pnpm run typecheck || {
  echo ""
  echo "❌ TypeScript errors. Fix before committing."
  exit 1
}

echo "✅ TypeCheck passed"
