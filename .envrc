# Development mode
export NODE_ENV=development

# Add node_modules/.bin to PATH for direct access to installed tools
PATH_add node_modules/.bin

# Playwright configuration
export PLAYWRIGHT_BROWSERS_PATH=~/.cache/ms-playwright

# Use system browsers (optional - uncomment if preferred)
# export USE_SYSTEM_BROWSERS=true

# Test configuration
export HEADLESS=false  # Set to true for CI/headless testing

# Vite dev server configuration
export VITE_PORT=5173
export VITE_HOST=localhost

# Project metadata (optional)
export PROJECT_NAME="fam-trainingsplan"
export PROJECT_VERSION="2.4.0"

# Development helpers
# Uncomment if you need additional environment variables
# export DEBUG="vite:*"
# export BROWSER="chromium"

