# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON
[*.{js,mjs,cjs,ts,mts,cts,json}]
indent_style = space
indent_size = 2

# HTML, CSS
[*.{html,css}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Make files (require tabs)
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[*.config.{js,ts}]
indent_style = space
indent_size = 2
